<!DOCTYPE html>
<html>
<head>
  <title>harj meeting times</title>
  <%= stylesheet_link_tag 'styles', :media => 'screen' %>
  <%= javascript_include_tag :defaults %>
  
  <%= csrf_meta_tag %>
  <script type="text/javascript">
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-21709826-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  </script>
  
</head>
<body>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
    <div id="flash_notice" style="display:none"></div>
  <% end %>

  <%= yield %>

  <% if current_user %>
  ---
    <p><%= link_to "logout", { :controller => "user_sessions", :action => "destroy" } %></p>
  <% end %>

</body>
</html>
