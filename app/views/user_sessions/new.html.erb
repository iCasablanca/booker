<h1> Login </h1>

    <% form_for @user_session, :url => {:action => "create"} do |f| %>
      <%= f.error_messages %>
      <%= f.label :login %> <%= f.text_field :login %><br />
      <%= f.label :password %> <%= f.password_field :password %><br />
      <%= f.check_box :remember_me %> <%= f.label :remember_me %><br />
      <%= f.submit "Login" %>
    <% end %>
